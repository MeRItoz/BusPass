<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black"
    tools:context=".PaymentActivity">


    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Choose Payment Options"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGpay"
        android:layout_width="186dp"
        android:layout_height="49dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/btn_bg"
        android:paddingLeft="20dp"
        android:text="Google Pay"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle" />

    <Button
        android:id="@+id/btnPaytm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_bg"
        android:text="Paytm"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btnGpay"
        app:layout_constraintStart_toStartOf="@+id/btnGpay"
        app:layout_constraintTop_toBottomOf="@+id/btnGpay" />

    <Button
        android:id="@+id/btnDebitcard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_bg"
        android:text="Debit card"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btnPaytm"
        app:layout_constraintStart_toStartOf="@+id/btnPaytm"
        app:layout_constraintTop_toBottomOf="@+id/btnPaytm" />

    <Button
        android:id="@+id/btnCreditcard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_bg"
        android:text="Credit card"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btnDebitcard"
        app:layout_constraintStart_toStartOf="@+id/btnDebitcard"
        app:layout_constraintTop_toBottomOf="@+id/btnDebitcard" />


</androidx.constraintlayout.widget.ConstraintLayout>